<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_bzns"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="3dp"
    android:layout_marginBottom="3dp"
    android:padding="3dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_bzns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="2"
            android:padding="2dp"
            android:text="@string/app_name"
            android:textColor="#213e53"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_bzns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_bzns"
            android:layout_marginEnd="55dp"
            android:maxLines="4"
            android:padding="2dp"
            android:text="@string/business_news"
            android:textColor="#2b2b2b" />

        <ImageView
            android:id="@+id/share_bzns"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:clickable="true"
            app:srcCompat="@drawable/links_share" />

        <TextView
            android:id="@+id/pubDate_bzns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:background="#99434343"
            android:gravity="bottom"
            android:padding="2dp"
            android:textColor="#fff"
            android:textSize="13sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>